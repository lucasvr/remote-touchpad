<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.peterleow.androidconnection.TouchpadActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <android.gesture.GestureOverlayView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/touchPad"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.97"
            android:background="#dcdcdc"
            android:gestureColor="#7f7f7f"></android.gesture.GestureOverlayView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="192dp"
                android:layout_height="match_parent"
                android:id="@+id/leftClickButton"
                android:layout_weight="0.49"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_columnSpan="12" />

            <Button
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:id="@+id/rightClickButton"
                android:layout_weight="0.38"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_row="0"
                android:layout_column="13" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
